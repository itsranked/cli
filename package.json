{
  "name": "itsranked-cli",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "nohup-score": "sudo nohup yarn start save-top100 -vk &> save-top100.log",
    "nohup-bots": "sudo nohup yarn start update-score -v &> update-score.log",
    "build": "npm-run-all clean tsc",
    "clean": "rimraf dist",
    "format": "yarn run prettier --write",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "nodemon": "nodemon --watch dist",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{css,html,js,jsx,json,ts,tsx,md,mdx,yml,yaml}\"",
    "start": "ts-node main.ts",
    "dev": "npm-run-all build --parallel tsc:watch nodemon",
    "test": "npm-run-all lint test:format",
    "test:format": "yarn run prettier --check",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch"
  },
  "dependencies": {
    "@types/lodash": "^4.14.168",
    "@types/microtime": "^2.1.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.6.12",
    "bufferutil": "^4.0.3",
    "lodash": "^4.17.21",
    "microtime": "^3.0.0",
    "moment": "^2.29.1",
    "mongodb": "^3.6.6",
    "source-map-support": "^0.5.16",
    "utf-8-validate": "^5.0.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 120
  }
}
